@model bool

<nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LFI test client</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor02">
        @if (ViewBag.OrgPickerTenantList != null ) {
            <select name="orgSelector" id="orgSelector" class="form-control form-control-sm w-auto" onchange="location.href = this.value">
                @foreach (var details in ViewBag.OrgPickerTenantList)
                {
                    @if (details.TenantId == ViewBag.OrgPickerCurrentTenantId) {
                        <option value="@Url.Action("Index", "Home", new { tenantId = @details.TenantId })" selected="selected">@details.TenantName</option>
                    } else {
                        <option value="@Url.Action("Index", "Home", new { tenantId = @details.TenantId })">@details.TenantName</option>
                    }
                }
            </select>
        }

        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <span class="navbar-text font-weight-bold">CONNECT:</span>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Authorization" asp-action="Index" asp-route-provider="SGD" title="Sage 50, installed">[Sage Desktop]</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Authorization" asp-action="Index" asp-route-provider="SGO" title="Sage Accounting, SBCA, etc">[Sage Cloud]</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Authorization" asp-action="Index" asp-route-provider="QBO" title="QuickBooks Online, production keys">[QuickBooks Online]</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Authorization" asp-action="Index" asp-route-provider="QBX" title="QuickBooks Online, development sandbox keys">[QBO Sandbox]</a>
            </li>

            @if (ViewBag.IncludeBetaSystems)
            {
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Authorization" asp-action="Index" asp-route-provider="XRO" title="Xero">[Xero]</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Authorization" asp-action="Index" asp-route-provider="LFI" title="Connect to whatever via Ledgerscope API">[Ledgerflow]</a>
            </li>
            }

            <li class="nav-item" style="margin-left: 10px;">
                <span class="navbar-text font-weight-bold">ADMIN:</span>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Authorization" asp-action="Revoke">[Revoke Token]</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Authorization" asp-action="Disconnect">[Disconnect]</a>
            </li>
        </ul>

    </div>
</nav>